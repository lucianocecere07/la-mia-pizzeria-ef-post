@model Pizza

<div class="container">
    <h2><u>Compila il form per modificare la pizza selezionata</u></h2>
    <form asp-controller="Pizza" asp-action="Modifica">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label class="form-label fw-bolder">Id</label>
            <input asp-for="Id" type="text" class="form-control" readonly>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bolder">Nome</label>
            <input type="text" class="form-control" asp-for="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bolder">Descrizione</label>
            <input type="text" class="form-control" asp-for="Description">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bolder">Percorso dell'immagine</label>
            <input type="text" class="form-control" asp-for="Image">
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bolder">Prezzo (€)</label>
            <input type="text" class="form-control" asp-for="Price">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-link btn-lg" value="salva">Salva modifiche</button>
    </form>
</div>